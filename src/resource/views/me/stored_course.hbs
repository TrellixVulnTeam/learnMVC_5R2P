<div class="mt-4 container">
    <h2>My Courses</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name Course</th>
                <th scope="col">Video ID</th>
                <th scope="col" colspan="2">Time created</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.videoId}}</td>
                <td>{{this.createdAt}}</td>
                <td>
                    <a href="/course/{{this._id}}/edit" class="btn btn-primary btn-lg">Edit</a>
                    <a href="/course/{{this._id}}" id="btn-delete" class="btn btn-danger btn-lg" data-toggle="modal" data-target="#delete-course" data-id="{{this._id}}">Delete</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
</table>
</div>
<div class="modal" tabindex="-1" role="dialog " id="delete-course">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this course?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-course-modal" type="button" class="btn btn-danger" >Delete</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<form name="delete-course-form" method="delete">
  <input type="hidden" name="_method" value="delete">
</form> 

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var courseID;
        var deleteForm = document.forms['delete-course-form']
        var btnDeleteCourse = document.getElementById('btn-delete-course-modal')
       
        $('#delete-course').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Button that triggered the modal
        courseID = button.data('id') 
        })
         btnDeleteCourse.onclick = function(){
            deleteForm.action = '/course/' + courseID + '?_method=delete'
            deleteForm.submit()
        } 
    })
</script>
<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-item">
                <a href="/course/{{this._doc.slug}}">
                <img class= "card-img-top" src="{{this._doc.image}}" alt="{{this._doc.name}}">
                </a>
                <div class="card-body">
                    <a href="/course/{{this._doc.slug}} ">
                    <h5 class="card-title d-flex justify-content-center">{{this._doc.name}}</h5>
                    </a>
                    <p class="card-text d-flex justify-content-center"> {{this._doc.description}}</p>
                    <a href="#" class="btn btn-primary d-flex justify-content-center">Getting started</a>
                 </div>
            </div>
        </div>
         {{/each}}
    </div>
</div>